<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Item</th>
      <th scope="col">Title</th>
      <th scope="col">Quantity</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      {{!-- {{#each this.product}} --}}
      <th scope="row">1</th>
      <td><img style="width: 70px; height:70px" src="/product-images/{{this.product._id}}.jpg" </td>
      <td>{{this.product.Name}}</td>
      {{!-- {{/each}} --}}
      <td> <button class="cart-item-count mr-3">-</button>{{this.quantity}}<button class="cart-item-count ml-3" onclick="changeQuantity({{this._id}},{{this.product._id}})">+</button></td>
      <td>
        <a href="" class="btn btn-danger">Remove</a>
      </td>


    </tr>
    {{/each}}
  </tbody>
</table>

<script>
  function changeQuantity(cartId,proId,count){
$.ajax({
  url:'/change-product-quantity',
  data:{
    cart:cartId,
    product:proId,
    count:count
  },
  method:'post',
  success:(response)=>{
    alert(response)
  }
})
  }
</script>